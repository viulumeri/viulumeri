# Environment (development | production | test)
NODE_ENV=development

# MongoDB connection string - adjust credentials and host as needed
MONGODB_URI=mongodb://admin:password@localhost:27017/viulumeri?authSource=admin

# Better Auth secret key - generate a random string for security
BETTER_AUTH_SECRET=your-random-secret-key-here

# Backend server URL used by Better Auth for generating verification links
# Should point to your frontend in development due to Vite proxy
BETTER_AUTH_URL=http://localhost:5173

# Frontend client URL (for CORS in development)
CLIENT_URL=http://localhost:5173

# Production domain (set this in production environment)
PRODUCTION_URL=https://viulumeri.fi

# Resend API key for sending emails (get from resend.com)
RESEND_API_KEY=re_your-resend-api-key-here

# From email address for outgoing emails
FROM_EMAIL=noreply@viulumeri.fi

MUSIC_DIR=
